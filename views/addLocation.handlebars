    <div class="container">
        <div class="row">
            <div class='col-md-3'></div>
            <div class="col-md-6">
                <center>
                <legend>Where should we feature next?</legend>
                </center>
                <form id="addLocationForm" role="form" method="get" action="/add">
                    <div class="form-group">
                        <label for="locationname">Location Name</label>
                           <input type="text" class="form-control" id="locationname" placeholder="Location Name" name="locationname"/>
                    </div>
                    <div class="form-group">
                        <label for="locationdescription">Description</label>
                           <input type="text" class="form-control" id="locationdescription" placeholder="Description" name="locationdescription"/>
                    </div>
                    <div class="form-group">
                        <label for="locationaddress">Address</label>
                        <input type="text" class="form-control" id="locationaddress" placeholder="Address" name="locationaddress" />
                    </div>
                    <div class="form-group">
                        <label for="locationlatitude">Location Latitude</label>
                        <input type="number" step="any" class="form-control" id="locationlatitude" placeholder="Location Latitude" name="locationlatitude" min="-90" max="90" />
                    </div>
                    <div class="form-group">
                        <label for="locationlongitude">Location Longitude</label>
                        <input type="number" step="any" class="form-control" id="locationlongitude" placeholder="Location Longitude" name="locationlongitude" min="-180" max="180" />
                    </div>
                    <div class="form-group">
                        <label for="locationtags">Tags</label>
                        <input type="text" class="form-control" id="locationtags" placeholder="Tags" name="locationtags" />
                    </div>
                    <div class="form-group">
                        <label for="locationimglink">Sample Image URL</label>
                        <input type="text"  class="form-control" id="locationimglink" placeholder="Sample Image URL" name="locationimglink" 
                               title="Must have an image extension (.jpg, .jpeg, .png, .bmp, .tiff, .img)" required pattern="(.+)\.(jpg|jpeg|png|bmp|tiff|img)$" />
                    </div>
                          
                    <br>
                        
                    <input type="submit" id="submitBtn" class="btn btn-default btn-block m-t-md" value="Add a New Location"></input>
                        
                </form>
            </div>
            <div class='col-md-3'></div>
        </div>
    </div>


    <div class="container">

    <div class="container">
        <div class="row">
            <div class='col-md-3'></div>
            <div class="col-md-6">
                <center>
                <legend>Where should we feature next?</legend>
                </center>
                <br>
                <form id="addLocationForm" role="form" method="get" action="/add">
                    <h3>Add a location</h3>
                    <div class="form-group">
                        <label for="locationname">Location Name</label>
                           <input type="text" class="form-control" id="locationname" placeholder="Location Name" name="locationname"/>
                    </div>

                    <div class="form-group">
                        <label for="locationaddress">Location Address</label>
                        <input type="text" class="form-control" id="locationaddress" placeholder="Location Address" name="locationaddress" />
                    </div>

                    <div class="form-group">
                        <label for="locationimglink">Location Image URL</label>
                        <input type="text" class="form-control" id="locationimglink" placeholder="Image URL" name="locationimglink" />
                    </div>

                    <div class="form-group">
                        <label for="locationdescription">Location Description</label>
                        <input type="text" class="form-control" id="locationdescription" placeholder="Description" name="locationdescription" />
                    </div>
                                
                    <br>
                        
                    <input type="submit" id="submitBtn" class="btn btn-default btn-block m-t-md" value="Add a new Location"></input>
                        
                </form>
            </div>
            <div class='col-md-3'></div>
        </div>
    </div>


    <div class="container">
        <div class="row">
            {{#each locationArray}}
            <div class="col-lg-3 col-md-4 col-sm-6 thumb">
                <div class="hovereffect ">
                    <img class="img-responsive" src="{{imageURL}}" alt="">
                        <div class="overlay">
                            <h2>{{name}}</h2>
                            <p>
                                <a href="#">Explore More</a>
                            </p> 
                        </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>




